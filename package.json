{
  "name": "@appist/kit",
  "version": "0.0.0-development",
  "description": "The modern toolkit to build/deploy scalable app rapidly on AWS.",
  "type": "module",
  "bugs": {
    "url": "https://github.com/appist/kit/issues"
  },
  "files": [
    "dist"
  ],
  "homepage": "https://github.com/appist/kit#readme",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/appist/kit.git"
  },
  "scripts": {
    "prebuild": "npm run clean",
    "build": "tsc",
    "clean": "rimraf dist",
    "dev": "npm run build -- -w",
    "lint": "prettier --check . && eslint .",
    "lint:fix": "prettier --write . && eslint --fix .",
    "lint:staged": "lint-staged",
    "prepare": "husky install",
    "test": "jest"
  },
  "dependencies": {
    "@babel/core": "^7.14.6",
    "@babel/preset-env": "^7.14.5",
    "@babel/preset-typescript": "^7.14.5",
    "@prettier/plugin-pug": "^1.16.0",
    "@sveltejs/kit": "^1.0.0-next.122",
    "@typescript-eslint/eslint-plugin": "^4.27.0",
    "@typescript-eslint/parser": "^4.27.0",
    "ansi-colors": "^4.1.1",
    "babel-jest": "^27.0.2",
    "compression": "^1.7.4",
    "dirname-filename-esm": "^1.1.1",
    "dotenv": "^10.0.0",
    "esbuild": "^0.12.9",
    "eslint": "^7.29.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-svelte3": "^3.2.0",
    "http-proxy": "^1.18.1",
    "husky": "^7.0.1",
    "jest": "^27.0.4",
    "knex": "^0.95.6",
    "lint-staged": "^11.0.0",
    "mysql2": "^2.2.5",
    "nodemon": "^2.0.9",
    "pg": "^8.6.0",
    "pino": "^6.11.3",
    "pino-pretty": "^5.1.0",
    "pkg-dir": "^5.0.0",
    "polka": "^0.5.2",
    "prettier": "^2.3.1",
    "prettier-plugin-svelte": "^2.3.1",
    "pug": "^3.0.2",
    "rimraf": "^3.0.2",
    "sade": "^1.7.4",
    "serverless-http": "^2.7.0",
    "sirv": "^1.0.12",
    "sqlite3": "^5.0.2",
    "stoppable": "^1.1.0",
    "svelte-check": "^2.2.0",
    "svelte-preprocess": "^4.7.3",
    "tiny-glob": "^0.2.9",
    "ts-node": "^10.0.0",
    "tslib": "^2.3.0",
    "typescript": "^4.3.4"
  },
  "devDependencies": {
    "@types/compression": "^1.7.1",
    "@types/http-proxy": "^1.17.7",
    "@types/jest": "^26.0.23",
    "@types/node": "^16.0.0",
    "@types/nodemon": "^1.19.1",
    "@types/pino": "^6.3.8",
    "@types/polka": "^0.5.2",
    "@types/sade": "^1.7.2",
    "@types/stoppable": "^1.1.1"
  },
  "exports": {
    "./cmd": {
      "import": "./dist/cmd/index.js"
    },
    "./server": {
      "import": "./dist/server/index.js"
    },
    "./util": {
      "import": "./dist/util/index.js"
    },
    "./client": {
      "import": "./dist/client/index.js"
    }
  },
  "typesVersions": {
    "*": {
      "cmd": [
        "./dist/cmd/index.d.ts"
      ],
      "server": [
        "./dist/server/index.d.ts"
      ],
      "util": [
        "./dist/util/index.d.ts"
      ],
      "client": [
        "./dist/client/index.d.ts"
      ]
    }
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "current"
          }
        }
      ],
      "@babel/preset-typescript"
    ]
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "browser": true,
      "es2021": true,
      "node": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "prettier"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "sourceType": "module",
      "ecmaVersion": 2021
    },
    "plugins": [
      "@typescript-eslint"
    ],
    "rules": {
      "@typescript-eslint/no-var-requires": 0
    }
  },
  "eslintIgnore": [
    ".DS_Store",
    "coverage",
    "dist",
    "node_modules"
  ],
  "jest": {
    "coveragePathIgnorePatterns": [
      "/dist/",
      "/node_modules/",
      "/__fixtures__/"
    ],
    "testPathIgnorePatterns": [
      "/dist/",
      "/node_modules/",
      "/__fixtures__/"
    ]
  },
  "lint-staged": {
    "*.{ts}": [
      "eslint --fix",
      "prettier --parser=typescript --write"
    ],
    "*.{json,md,yml,yaml}": "prettier --write"
  },
  "prettier": {
    "printWidth": 100,
    "tabWidth": 2,
    "useTabs": false
  }
}
